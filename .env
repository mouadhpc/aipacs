# Configuration d'environnement pour l'application IA PACS
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Configuration générale
DEBUG=false
LOG_LEVEL=INFO

# Base de données
DATABASE_URL=postgresql://ai_pacs_user:your_secure_password@localhost:5432/ai_pacs
DB_PASSWORD=your_secure_password

# Redis
REDIS_URL=redis://localhost:6379/0

# Configuration DICOM
DICOM_AE_TITLE=IA_SERVER
DICOM_PORT=11112
DICOM_HOST=0.0.0.0

# Configuration PACS interne
PACS_AE_TITLE=PACS_INTERNE
PACS_HOST=192.168.1.100
PACS_PORT=11111

# Configuration API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Sécurité
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
TOKEN_EXPIRE_MINUTES=30

# Configuration IA
AI_MODEL_PATH=./models/ai_model.pth
AI_CONFIDENCE_THRESHOLD=0.8
AI_BATCH_SIZE=4

# Stockage
DATA_DIRECTORY=./data
TEMP_DIRECTORY=./temp
LOG_DIRECTORY=./logs

# Rapports
REPORT_TEMPLATE_DIR=./templates/reports
REPORT_OUTPUT_FORMAT=DICOM_SR